{
  "name": "typescript-minimalist-starter",
  "version": "1.0.0",
  "description": "A minimalist typescript setup for node projects",
  "main": "index.js",
  "engines": {
    "node": ">= 20.9 < 21"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc-watch --onSuccess \"node dist/index.js\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "typescript",
    "setup",
    "node"
  ],
  "author": "meksof@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "eslint": "^8.57.0",
    "tsc-watch": "^6.2.0",
    "typescript": "^5.4.5"
  }
}